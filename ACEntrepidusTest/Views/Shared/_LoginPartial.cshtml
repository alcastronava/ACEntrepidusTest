@using Microsoft.AspNet.Identity
@using ACEntrepidusTest.Models
@using ACEntrepidusTest.Extensions

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav">
            <li class="nav-item">
                @Html.ActionLink("Hola " + User.Identity.GetFullName() + "!", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { title = "Cambiar Contraseña", @class = "nav-link font-weight-bold text-white" })
            </li>
            <li class="nav-item"><a class="nav-link text-danger" href="javascript:document.getElementById('logoutForm').submit()">Cerrar Sesión</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link text-success font-weight-bold" })</li>
        <li class="nav-item">@Html.ActionLink("Iniciar Sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link text-primary font-weight-bold" })</li>
    </ul>
}
